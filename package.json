{
  "name": "@mmc-cloud/ssg",
  "version": "1.0.0",
  "keywords": [
    "vite",
    "ssg",
    "react",
    "mdx",
    "docs"
  ],
  "author": "codeDaiQin",
  "license": "ISC",
  "description": "Vite & MDX & React powered static site generator.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "fix": "eslint --fix --ext .ts,.tsx src/**/* --no-ignore",
    "dev": "mmc-ssg docs",
    "build": "rollup --config rollup.config.ts --configPlugin esbuild"
  },
  "bin": {
    "mmc-ssg": "./bin/mmc.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./dist/*": "./dist/*"
  },
  "files": [
    "bin",
    "dist"
  ],
  "devDependencies": {
    "@mmc-cloud/eslint-config-ts": "^1.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "cac": "^6.7.14",
    "eslint": "^8.31.0",
    "fast-glob": "^3.2.12",
    "rollup": "^3.10.0",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "4"
  },
  "dependencies": {
    "@mdx-js/react": "^2.2.1",
    "@mdx-js/rollup": "^2.2.1",
    "@svgr/core": "^6.5.1",
    "@vitejs/plugin-react": "^3.0.1",
    "classnames": "^2.3.2",
    "esbuild": "^0.17.3",
    "fs-extra": "^11.1.0",
    "less": "^4.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.6.2",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gemoji": "^7.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx-frontmatter": "^2.1.1",
    "unocss": "^0.48.4",
    "vite": "^4.0.4"
  }
}
